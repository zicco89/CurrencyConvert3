<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/usdText"
        android:layout_width="193dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="USD:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eurText"
        android:layout_width="193dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="EUR:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/usdText"
        app:layout_constraintTop_toBottomOf="@+id/usdText" />

    <TextView
        android:id="@+id/gbpText"
        android:layout_width="193dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="GBP:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/eurText"
        app:layout_constraintTop_toBottomOf="@+id/eurText" />

    <TextView
        android:id="@+id/rubText"
        android:layout_width="193dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="RUB:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/gbpText"
        app:layout_constraintTop_toBottomOf="@+id/gbpText" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:onClick="getRates"
        android:text="GET RATES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rubText" />
</androidx.constraintlayout.widget.ConstraintLayout>